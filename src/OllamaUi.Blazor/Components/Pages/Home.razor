@page "/"
@rendermode InteractiveServer

<PageTitle>Ollama UI</PageTitle>

<div class="container-fluid">
  <div class="row">
    <div class="col-2 ps-0 fixed-bottom" style="height: 95vh; margin-top: 2.5vh; margin-bottom: 2.5vh;">
      <SidebarComponent @bind-SelectedElement="@_render"
                        SavedChats="@_knownChats" />
    </div>
    <div class="col-2 pe-2"></div>
    <div class="col-9">
      @if (_render is  ManifestSpecial { DisplayName: "message" })
      {
        <GenerateMessageComponent />
      } else if (_render is ManifestSpecial { DisplayName: "chat" })
      {
        <NewChatComponent SetupNewChat="@(content => OnNewChatSentAsync(content))" />
      } else
      {
        <GenerateChatComponent ChatId="@(_render.ChatId)" SetupNewChat="@_newChat" />
      }
    </div>
  </div>
</div>
